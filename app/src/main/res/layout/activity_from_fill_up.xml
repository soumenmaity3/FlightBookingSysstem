<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/page_color"
    tools:context=".FromFillUp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="something"
            android:id="@+id/startFlight1"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:gravity="start"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_forward_24"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="something"
            android:id="@+id/destinationFlight1"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_weight="1"
            android:gravity="end"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="start">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Flight Price"
            android:textColor="@color/black"
            android:background="@drawable/edit_text_bg"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5600/- Rupee"
            android:textColor="@color/black"
            android:id="@+id/flightPrice"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"

            android:background="@drawable/edit_text_bg"
            android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="start">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Flight Name"
            android:textColor="@color/black"
            android:background="@drawable/edit_text_bg"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Indigo"
            android:textColor="@color/black"
            android:id="@+id/flightName2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"

            android:background="@drawable/edit_text_bg"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="start">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Flight Number"
            android:textColor="@color/black"
            android:background="@drawable/edit_text_bg"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="641641515"
            android:textColor="@color/black"
            android:id="@+id/flightNumber2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"

            android:background="@drawable/edit_text_bg"
            android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="start">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Selected seats :"
            android:textColor="@color/black"
            android:background="@drawable/edit_text_bg"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="S1,S2"
            android:textColor="@color/black"
            android:id="@+id/seatNo"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/edit_text_bg"
            android:textSize="18sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="start">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Name :"
            android:textColor="@color/black"
            android:background="@drawable/edit_text_bg"
            android:textSize="18sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:id="@+id/passName"
            android:inputType="text"
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"
            android:background="@drawable/edit_text_bg"
            android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="start">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Last Name :"
            android:textColor="@color/black"
            android:background="@drawable/edit_text_bg"
            android:textSize="18sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:textColor="@color/black"
            android:id="@+id/passLName"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/edit_text_bg"
            android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="start">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Enter Mobile :"
            android:textColor="@color/black"
            android:background="@drawable/edit_text_bg"
            android:textSize="18sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile number"
            android:textColor="@color/black"
            android:id="@+id/passMobile"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:layout_marginLeft="15dp"
            android:background="@drawable/edit_text_bg"
            android:textSize="18sp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* Enter 10 digits mobile umber"
        android:textSize="12dp"
        android:id="@+id/redText"
        android:layout_marginLeft="125dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forOTP"
        android:text="Get OTP"
        android:layout_marginBottom="10dp"
        android:layout_gravity="end"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="OTP"
        android:background="@drawable/edit_text_bg"
        android:ems="8"
        android:textColor="@color/black"
        android:layout_gravity="end"
        android:id="@+id/enterOTP"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">
        <Button
            android:id="@+id/btnConfirmContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay And Continue"
            android:textStyle="bold"
            android:backgroundTint="#1B2D94"
            android:textColor="@android:color/white"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>